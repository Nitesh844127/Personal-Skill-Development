@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <style>
        body {
            height: 100vh;
            background-image: url('https://images.unsplash.com/photo-1607237138185-eedd9c632b0b?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); /* Add your background image URL here */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .Main {
           
            color: white;
            border: 5px solid black  ;
            border-radius: 5px;
            padding: 20px;
            background-color: rgba(5, 5, 5, 2); /* Add opacity to make the background semi-transparent */
        }

        body,
        html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .form-control:focus {
            border-color: #ffc107; /* Change border color when input is focused */
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25); /* Add focus effect */
        }

        .form-group {
            transition: all 0.3s; /* Add transition effect to form-group */
        }

        .form-control {
            background-color: #3a6bba;
            border: none;
            border-bottom: 2px solid #ffffff;
            border-radius: 0;
            color: #ffffff;
            font-size: 16px;
            padding: 10px 0;
            margin-bottom: 20px;
            transition: all 0.3s; /* Add transition effect to form-control */
        }

            .form-control::placeholder {
                color: #ffffff;
            }

            .form-control:focus::placeholder {
                color: transparent; /* Hide placeholder on focus */
            }

        .btn-primary {
            background-color: #ffc107;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s; /* Add transition effect to button */
        }

            .btn-primary:hover {
                background-color: #ff9800; /* Change button background color on hover */
            }

        .text-center {
            text-align: center;
        }

        .mb-3 {
            margin-bottom: 15px;
        }

        .mt-5 {
            margin-top: 50px;
        }

        .animated-border {
            border: 2px solid transparent;
            border-radius: 15px;
            transition: border-color 0.3s ease; /* Add transition effect to border-color */
        }

            .animated-border:focus {
                border-color: #ffc107; /* Change border color when input is focused */
            }
    </style>
</head>

<body>
    
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form method="post">
                    <div class="form-control Main animated-border">
                        <div class="form-group" style="padding:25px;">
                            <div class="col-12"><h1 class="text-center text-white">Login</h1></div>
                            <div class="col-12">
                                <label class="mb-3 fw-bold" style="font: bold; font-size:16px;">User Name:</label>
                                <input type="text" name="username" class="form-control" value="" required
                                       placeholder="Enter your username" />
                            </div>
                            <div class="col-12">
                                <label class="mb-3 fw-bold" style="font: bold; font-size:16px;">Password:</label>
                                <input type="password" name="password" class="form-control mb-3" value="" required
                                       placeholder="Enter your Password" />
                            </div>
                            <div class="text-center">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                                @ViewBag.msg
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>


